{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true, // Это генерирует файлы типов (.d.ts)
    "declarationMap": true, // Добавляет карты для .d.ts файлов (опционально)
    "noEmit": false, // Убедитесь, что файлы скомпилируются
    "emitDeclarationOnly": false // Убедитесь, что создаются только JS и TS файлы, а не только декларации
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
